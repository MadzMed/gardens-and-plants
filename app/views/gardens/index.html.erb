<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1612387290123-34af734b5f61?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=686&q=80); background-size: cover; background-position: center;">
</div>

<div class="container">
  <% @gardens.each do |garden| %>
    <%= link_to garden_path(garden) do %>
      <div class="card-category mt-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= garden.banner_url %>)">
        <%= garden.name %>
      </div>
    <% end %>
  <% end %>
</div>
