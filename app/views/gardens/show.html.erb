<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1612387290123-34af734b5f61?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=686&q=80); background-size: cover; background-position: center;">
</div>

<div class="container">
  <ul>
    <li>name: <%= @garden.name %></li>
  </ul>
</div>

<% @garden.plants.each do |plant| %>
  <div class="card-category mt-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://media.istockphoto.com/photos/edelweiss-with-mountain-in-background-alps-picture-id824629116?b=1&k=20&m=824629116&s=170667a&w=0&h=iJ_31Cb6FegooFOZ6raWO5LFlsohQ0Iv34VY_eMWRz4=)">
    <%= plant.name %><%= link_to 'X', garden_plant_path(@garden, plant), method: :delete %>
  </div>
<% end %>

<%= simple_form_for([@garden ,@plant]) do |f| %>
  <%= f.input :name %>
  <%= f.submit 'add plant' %>
<% end %>

